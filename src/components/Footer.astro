---
import { Image } from "astro:assets";
import { FaFacebook, FaInstagram, FaLinkedin } from "react-icons/fa";

---

<footer class="">
    <div class="container mx-auto max-w-5xl px-4 md:px-0 p-4 py-6 lg:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="/" class="flex items-center mb-2 sm:mb-0 space-x-3 rtl:space-x-reverse">
                <img class="h-8 w-auto" src="/plastigesa.webp" alt="Logo plastigesa" />
            </a>
            <ul class="flex flex-wrap items-center mb-2 sm:mb-0">
                <li>
                    <a href="/#aboutus" class="me-4 md:me-6">Sobre nosotros</a>
                </li>
                <li>
                    <a href="/#products" class="me-4 md:me-6">Productos</a>
                </li>
                <li>
                    <a href="/#atention" class="me-4 md:me-6">Atención</a>
                </li>
                <li>
                    <a href="/#contactus" >Contacto</a>
                </li>
            </ul>
        </div>
        <hr class="my-6 sm:mx-auto lg:my-8" />
        <div class="sm:flex sm:items-center sm:justify-between">
            <span class="text-muted sm:text-center">© 2025 <a href="/" class="hover:underline">Plastigesa</a>. Todos los derechos reservados.</span>
            <div class="flex mt-4 sm:justify-center sm:mt-0">
                <a href="https://www.linkedin.com/company/plastigesa/posts/?feedView=all" class="text-foreground" target="_blank">
                    <FaLinkedin size={25}/>
                    <span class="sr-only">Linkedin page</span>
                </a>
                <a href="https://www.facebook.com/Plastigesa.Peru" class="text-foreground ml-4" target="_blank">
                    <FaFacebook size={25}/>
                    <span class="sr-only">Facebook page</span>
                </a>
                <a href="https://www.instagram.com/plastigesa.pe" class="text-foreground ml-4" target="_blank">
                    <FaInstagram size={25}/>
                    <span class="sr-only">Instagram page</span>
                </a>
            </div>
        </div>
    </div>
</footer>

